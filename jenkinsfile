pipeline {
    agent any

    environment {
        IMAGE_NAME = "password-checker"
        CONTAINER_PORT = "5000"
    }

    stages {
        stage('Clone') {
            steps {
                git 'password'  // replace with your repo
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build(IMAGE_NAME)
                }
            }
        }

        stage('Run Container') {
            steps {
                script {
                    docker.image(IMAGE_NAME).run("-p 5000:5000")
                }
            }
        }
    }
}
